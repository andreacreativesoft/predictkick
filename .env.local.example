# PredictKick Environment Variables
# Copy this file to .env.local and fill in all values
# NEVER commit .env.local to git

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOi...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOi...

# API-Football (via RapidAPI)
RAPIDAPI_KEY=your_rapidapi_key
FOOTBALL_API_HOST=v3.football.api-sports.io

# The Odds API
ODDS_API_KEY=your_odds_api_key

# OpenWeatherMap
OPENWEATHER_API_KEY=your_openweather_key

# News API (GNews recommended for production)
NEWS_API_KEY=your_gnews_api_key

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your_key

# Upstash Redis
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=AXyour_token

# Vercel Cron Secret (generate with: openssl rand -hex 32)
CRON_SECRET=your_generated_secret
